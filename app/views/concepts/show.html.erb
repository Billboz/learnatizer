

<%= link_to 'new tip', new_concept_tip_path(@concept), class: 'btn btn-primary btn-lg'%><br>


<div class="container-fluid">
  <div class="row-fluid">
    <div class="col-md-4 col-md-10 col-md-offset-3">
        <div class="concept_title thumb <%= @concept.concept %>">
            <h1><center><div class=""><%= @concept.concept %></div></center></h1>
          </div>
    </div>
  </div>
  <div class="col-md-10 col-md-offset-2">
  <% @concept.tips.each do | tip | %>
        <div class="tab-pane fade active in" id="problem-<%= tip.id %>">
          <h3><%= tip.title %></h3>
        </div>

  <ul class="nav nav-tabs">

    <li class="active"><a href="#problem-<%= tip.id %>" data-toggle="tab">problem</a></li>
    <li><a href="#error-<%= tip.id %>" data-toggle="tab">error</a></li>
    <li><a href="#solution-<%= tip.id %>" data-toggle="tab">solution</a></li>
  </ul>
  <div id="myTabContent" class="tab-content">
    <div class="tab-pane fade active in" id="problem-<%= tip.id %>">
      <p><%= raw GitHub::Markdown.render(tip.problem).html_safe %></p>
    </div>
    <div class="tab-pane fade" id="error-<%= tip.id %>">
      <p><%= raw GitHub::Markdown.render(tip.error).html_safe %></p>
    </div>
    <div class="tab-pane fade" id="solution-<%= tip.id %>">
      <p><%= raw GitHub::Markdown.render(tip.solution).html_safe %></p>
    </div>
  </div>
  <% end %>
  </div>
</div>