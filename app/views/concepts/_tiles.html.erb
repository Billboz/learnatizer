<div class="container">

  <div class="row">

    <div class="col-lg-12">
      <h1 class="page-header"></h1>
    </div>
    <% @concepts.each_with_index do | conc, x | %>
        <div class="col-lg-3 col-md-4 col-xs-6 thumb">
            <%= link_to concept_path(conc), class: "thumbnail #{@tile_colors[x]}" do %>
                <h1><%= conc.concept %></h1>
            <% end %>
        </div>
    <% end %>
  </div>
</div>



