<%= form_for [@concept, @tip] do |f| %>

    <fieldset id="form-body">
      <div class="form-group">
        <label for="textArea" class="col-lg-2 control-label"><h3>title</h3></label>
        <div class="col-lg-10">
          <%= f.text_area 'title', class: 'form-control', rows: '1', placeholder: 'give it a great title'  %>
<br><br>
        </div>
      </div>
      <div class="form-group">
        <label for="textArea" class="col-lg-2 control-label"><h3>problem</h3></label>
        <div class="col-lg-10">
          <%= f.text_area 'problem', class: 'form-control', rows: '3', placeholder: 'here is where your question, problem or issue goes.  Links, text or even code with ````  code between  ````'  %>
<br><br>
        </div>
      </div>
      <div class="form-group">
        <label for="textArea" class="col-lg-2 control-label"><h3>error</h3></label>
        <div class="col-lg-10">
          <%= f.text_area 'error', class: 'form-control', rows: '3', placeholder: 'if you have any errors that you can share then here is where they go'  %>
<br><br>
        </div>
      </div>
      <div class="form-group">
        <label for="textArea" class="col-lg-2 control-label"><h3>solution</h3></label>
        <div class="col-lg-10">
          <%= f.text_area 'solution', class: 'form-control', rows: '3', placeholder: 'finally!  the solution goes here.'  %>
<br><br>
        </div>
      </div>
      <% if @tip.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@tip.errors.count, "error") %> prohibited this tip from being saved:</h2>

            <ul>
              <% @tip.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="form-group">
        <div class="col-lg-10 col-lg-offset-2">
          <%= f.submit 'submit', type: 'submit', class: 'btn btn-primary btn-lg'     %>
        </div>
      </div>
    </fieldset>

<% end %>
