<% if flash[:notice] %>
    <div class="alert alert-success alert-dismissible"><%= flash[:notice] %></div>
<% end %>
<% if flash[:error] %>
    <div class="alert alert-danger alert-dismissible"><%= flash[:error] %></div>
<% end %>
<% if flash[:warning] %>
    <div class="alert alert-warning alert-dismissible"><%= flash[:warning] %></div>
<% end %>
