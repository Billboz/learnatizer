<!DOCTYPE html>
<html>
<head>
  <title>Learnatizer</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>

<div class="navbar navbar-default">
  <div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <%= link_to 'learnatizer', root_path, class: 'navbar-brand' %>
  </div>
  <div class="navbar-collapse collapse navbar-responsive-collapse">
    <ul class="nav navbar-nav navbar-right">
      <li><a href="#">use badges for points 24</a></li>

      <li><div class="btn-toolbar">
        <div class="btn-group">
          <div class="btn-group">

            <% if signed_in? %>
                <%= submit_tag current_user.name, class: 'btn btn-success dropdown-toggle', data: {toggle:  'dropdown'} %>
            <% else %>
                <button class="btn btn-default" href="#signup" data-toggle="modal" style="float: right;" data-target=".bs-modal-sm">Sign In</button>
            <% end %>

            <ul class="dropdown-menu">
              <li><%= link_to 'Sign out', signout_path, method: :delete%></li>
            </ul>
          </div>
        </div>
      </div></li>

    </ul>
  </div>
</div>

   <%= yield %>

<%= render 'layouts/signup_signin' %>

<%= render 'layouts/flash_messages' %>


</body>
</html>
